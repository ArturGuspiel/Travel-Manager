@model Travel_Manager.Models.AddPage

@{
    ViewData["Title"] = "AddPost";
}

<h1>Add new Post</h1>

<hr />



    

        <div class="container">

            
            <form asp-action="AddPost">
                <div class="form-group-center">
                    <label>Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="comment" class="text-danger"></span>
                </div>
                <div class="row">


                    <div class="col-xl-6">
                        <label>Destination</label>
                        <input asp-for="Destination" class="form-control" />
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>
                    <div class="col-xl-6">
                        <label>Time needed</label>
                        <input asp-for="TimeNeeded" class="form-control" />
                        <span asp-validation-for="TimeNeeded" class="text-danger"></span>
                    </div>

                    <div class="col-xl-6">
                        <label>Date</label>
                        
                        <input asp-for="date" class="form-control" type="datetime" />
                        <span asp-validation-for="date" class="text-danger"></span>
                    </div>
                    <div class="col-xl-6">
                        <label>Necessary Things</label>
                        <input asp-for="NecessaryThings" class="form-control" />
                        <span asp-validation-for="NecessaryThings" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group-center">
                    <label>Extra Comments</label>
                    <input asp-for="comment" class="form-control" />
                    <span asp-validation-for="comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Post" class="btn btn-primary" />
                </div>
                <b> @ViewBag.message</b>
            </form>


        </div>



        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

