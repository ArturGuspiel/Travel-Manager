@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Travel Manager</h1>
    <p>Create an account or login to start sharing your travels and looking for inspirations.</p>
</div>

<div>
    <form action="">
        <div class="form-group row">
            <label for="login" class="col-sm-4 col-form-label">Login:</label>
            <div class="col-sm-8">
                <input type="login" class="form-control" id="login" placeholder="Enter your login">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-4 col-form-label">Password (8 characters minimum):</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="password" minlength="8" placeholder="Password">
            </div>
        </div>
            <button type="submit" class="btn btn-primary">Login</button>
</form>
</div>